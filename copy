DIR="/opt/copy/"   # Директория на удаленном сервере
server="172.21.2.25" # адрес удаленного сервера
user="net"
BDATE=$(date +\%d-\%m-\%y:%H:%M)

get_files() {


find $DIR -type f -name *.jpg > $BDATE/list.txt

for i in $(cat $BDATE/list.txt);
  do
    cp $i $BDATE
done

}


main() {


mkdir $BDATE
get_files
scp -r ./$BDATE $user@$server:/tmp/
cp /opt/copy/* /opt/bk/ -R
rm -rf $DIR/*
rm -rf $BDATE

}

main
